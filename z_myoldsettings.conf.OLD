# /etc/skel/.bash_profile:
# $Header: /home/cvsroot/gentoo-src/rc-scripts/etc/skel/.bash_profile,v 1.10 2002/11/18 19:39:22 azarah Exp $

#This file is sourced by bash when you log in interactively.
[ -f ~/.bashrc ] && . ~/.bashrc

# git stuff
function get_branch {
  git branch 2> /dev/null | grep \* | awk '{print "("$2") "}'
}

PATH=/opt/bin:$PATH
#PS1='$(get_branch)\h:\w> '
PS1="\[\033[01;34m\]\$(get_branch)\[\033[00m\]\h:\w> "

export PS1 PATH

alias ls='gls --color'
alias l.='ls -d .[a-zA-Z0-9]*'
alias p='ps aux | gsort -b -n +1 -2'
alias sdr='screen -dr'
alias sd='egrep "^\+\+\+"'
alias vi='vim'

if [[ -s /Users/toby/.rvm/scripts/rvm ]] ; then source /Users/toby/.rvm/scripts/rvm ; fi

export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Home

# Ruby Enterprise Edition tuning parameters
export RUBY_HEAP_MIN_SLOTS=250000
export RUBY_HEAP_SLOTS_INCREMENT=250000
export RUBY_HEAP_SLOTS_GROWTH_FACTOR=1
export RUBY_GC_MALLOC_LIMIT=50000000

export DYLD_LIBRARY_PATH=/opt/Cellar/gd/2.0.36RC1/lib:$DYLD_LIBRARY_PATH
